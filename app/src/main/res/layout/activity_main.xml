<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/Imb_Bluetooth"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/ic_bluetooth" />


                        <TextView
                            android:id="@+id/Etq_Bluetooth"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Bluetooth"
                            android:textColorHint="@android:color/background_dark"
                            android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/Imb_Audio"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/ic_audio" />


                        <TextView
                            android:id="@+id/Etq_PruebaAudio"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Prueba  de Audio"
                            android:textColorHint="@android:color/background_dark"
                            android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/Imb_Descanso"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/ic_descanso" />

                        <TextView
                            android:id="@+id/Etq_Descanso"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Descanso"
                            android:textColorHint="@android:color/background_dark"
                            android:textSize="10sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/Imb_Presentacion"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:background="@drawable/ic_presentacion" />

                        <TextView
                            android:id="@+id/Etq_Presentacion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="PresentaciÃ³n"
                            android:textColorHint="@android:color/background_dark"
                            android:textSize="10sp" />
                </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                        <TextView
                            android:id="@+id/Etq_Volt"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Voltaje:"

                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/Etq_Voltaje"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Voltaje"
                            android:textColor="@android:color/background_dark"
                            android:textColorHint="@android:color/background_dark"
                            android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                        <TextView
                            android:id="@+id/Etq_Temp"
                            android:layout_width="69dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Temperatura Motor"
                            android:textSize="11dp" />

                        <TextView

                            android:id="@+id/Etq_Temperatura_Motores"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:hint="Temperatura Motor"
                            android:textColor="@android:color/background_dark"
                            android:textColorHint="@android:color/background_dark"
                            android:textSize="12sp" />
                </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/ic_rayo_negro" />
                </LinearLayout>

                <TextView
                    android:id="@+id/Etq_Temperatura_Maxamiza"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:hint="Temperatura Maxima"
                    android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal">


                <EditText
                    android:id="@+id/Edt_Ip1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="192.168.0.118"

                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Edt_Port1"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="9000"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <EditText
                    android:id="@+id/Edt_Ip2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="192.168.0.128"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Edt_Port2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="1666"
                    android:textSize="13sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/Etq_DialogFlow"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DialogFlow" />

                <Switch
                    android:id="@+id/Swt_Voz_Df"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Servidores"
                    android:onClick="ONClick"
                    android:checked="false"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Etq_Voz"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=" Voz " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/Edt_Ip3"
                    android:layout_width="114dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="192.168.0.118"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/Edt_Port3"
                    android:layout_width="47dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="textPersonName"
                    android:text="8000"
                    android:textSize="13sp" />

                <Switch
                    android:id="@+id/Swt_Vision"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="Vision"
                    android:onClick="OnClick"
                    android:checked="false"
                    android:gravity="center"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/Etq_Vision"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Vision" />
        </LinearLayout>


        <Switch
            android:id="@+id/Swt_Joystick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/background_light"
            android:checked="true"
            android:gravity="center"
            android:onClick="OncLicK"
            android:text="Joystick"
            android:textColor="#0cb556" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/aidialog_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/layout_joystick"
                    android:layout_width="256dp"
                    android:layout_height="249dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/image_joystick"
                    android:orientation="vertical"></LinearLayout>


                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="97dp"
                    android:background="@android:color/background_light"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                        <ImageButton
                            android:id="@+id/Imb_Microfono"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/ic_mic_azul" />


                </LinearLayout>

                <TextView
                    android:id="@+id/Etq_Mensaje_Voz"
                    android:layout_width="248dp"
                    android:layout_height="41dp"
                    android:gravity="center"
                    android:text="Mensaje de voz"
                    android:textColorHint="@android:color/background_dark" />

                <LinearLayout
                    android:layout_width="301dp"
                    android:layout_height="52dp"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal"
                    android:visibility="visible">


                        <EditText
                            android:id="@+id/Edt_TextoFijo"
                            android:layout_width="251dp"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:text=""
                            android:textSize="14dp" />


                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@color/aidialog_background"
                            android:gravity="center"
                            android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/Imb_Mensaje"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/ic_send" />
                        </LinearLayout>

                </LinearLayout>

        </LinearLayout>

</LinearLayout>
